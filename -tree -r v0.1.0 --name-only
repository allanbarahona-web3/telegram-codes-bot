[32m+[m[32m        "en": "Choose a payout method:",[m
[32m+[m[32m        "es": "Elige un m√©todo de cobro:"[m
[32m+[m[32m    },[m
[32m+[m[32m    "enter_method_details": {[m
[32m+[m[32m        "en": "Send the details for **{method}** (e.g., email, ID, or account).",[m
[32m+[m[32m        "es": "Env√≠a los datos para **{method}** (por ejemplo, correo, ID o cuenta)."[m
[32m+[m[32m    },[m
[32m+[m[32m    "method_saved": {[m
[32m+[m[32m        "en": "‚úÖ Method saved and set as default.",[m
[32m+[m[32m        "es": "‚úÖ M√©todo guardado y establecido como predeterminado."[m
[32m+[m[32m    },[m
[32m+[m[32m    "withdraw_created": {[m
[32m+[m[32m        "en": "‚úÖ Withdrawal request created for {amount}. We will notify admins to process it.",[m
[32m+[m[32m        "es": "‚úÖ Solicitud de retiro creada por {amount}. Notificaremos a los admins para procesarlo."[m
[32m+[m[32m    },[m
[32m+[m[32m    "insufficient_funds": {[m
[32m+[m[32m        "en": "Insufficient available balance.",[m
[32m+[m[32m        "es": "Saldo disponible insuficiente."[m
[32m+[m[32m    },[m
